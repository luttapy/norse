[flake8]
ignore = E203, E266, E501, W503, W605
exclude = .git,__pycache__,docs/,build/
# line length is intentionally set to 80 here because black uses Bugbear
# See https://github.com/psf/black/blob/master/README.md#line-length for more
# details
max-line-length = 80
max-complexity = 10
select = B,C,E,F,W,T4,B9
